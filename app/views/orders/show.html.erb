<h1>Order Details</h1>

<p>Order ID: <%= @order.id %></p>
<p>Subtotal: <%= number_to_currency(@order.subtotal) %></p>
<p>GST: <%= number_to_currency(@order.gst) %></p>
<p>HST: <%= number_to_currency(@order.hst) %></p>
<p>Total Price: <%= number_to_currency(@order.total_price) %></p>
<p>Status: <%= @order.status %></p>

<h2>Order Items</h2>
<ul>
  <% @order.order_items.each do |item| %>
    <li>
      <%= item.product.name %> - <%= item.quantity %> - <%= number_to_currency(item.price) %>
    </li>
  <% end %>
</ul>
