<h1>Your Cart</h1>

<% if @cart_items.any? %>
  <ul>
    <% @cart_items.each do |cart_item| %>
      <li>
        <%= cart_item.product.name %> - <%= cart_item.quantity %> - <%= number_to_currency(cart_item.product.price * cart_item.quantity) %>
        <%= form_with model: cart_item, local: true, method: :patch do |form| %>
          <%= form.label :quantity %>
          <%= form.number_field :quantity, value: cart_item.quantity, min: 1 %>
          <%= form.submit 'Update' %>
        <% end %>
        <%= link_to 'Remove', cart_item_path(cart_item), method: :delete, data: { confirm: 'Are you sure?' } %>
      </li>
    <% end %>
  </ul>
  <p>Total: <%= number_to_currency(@cart_items.sum { |item| item.product.price * item.quantity }) %></p>
  <%= link_to 'Checkout', new_order_path %>
<% else %>
  <p>Your cart is empty</p>
<% end %>
