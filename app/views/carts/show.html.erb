<h1>Your Cart</h1>

<% if @cart_items.any? %>
  <ul>
    <% @cart_items.each do |cart_item| %>
      <li>
        <%= cart_item.product.name %> - <%= cart_item.quantity %> - <%= number_to_currency(cart_item.total_price) %>
        <%= link_to 'Remove', cart_item_path(cart_item), method: :delete, data: { confirm: 'Are you sure?' } %>
      </li>
    <% end %>
  </ul>
  <%= link_to 'Checkout', new_order_path %>
<% else %>
  <p>Your cart is empty</p>
<% end %>
